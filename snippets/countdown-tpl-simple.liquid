{%- style -%}
  .countdown__part--simple-{{id}}{
    background-color: {{bgcColor}} !important;
  }
  
  .countdown__sep-{{id}} svg circle {
    fill: {{ dotColor | default: '#fff'}};
  }
{%- endstyle -%}
<div class="countdown__timer-simple flex flex-wrap align-center">
  <div class="countdown__part countdown__part--simple countdown__part--simple-{{id}} flex flex-column justify-center countdown__days center">
    <span class="countdown__part__value countdown__part__value--simple countdown__days__value flex justify-center align-center h2 font-heading-extra-bold">
      {%- if use_design_mode -%}XX{%- endif -%}
    </span>
    {% comment %} <span class="countdown__text countdown__text--simple font-body-semi-bold countdown__days__label uppercase">{{ 'general.countdown.days' | t }}</span> {% endcomment %}
  </div>
  <div class="countdown__sep flex flex-column color-foreground-{{id}}">
    <span class="cuntdown__sep__colon_line">:</span>
  </div>
  <div class="countdown__part countdown__part--simple countdown__part--simple-{{id}} flex flex-column justify-center countdown__hours center">
    <span class="countdown__part__value countdown__part__value--simple countdown__hours__value flex justify-center align-center h2 font-heading-extra-bold">
      {%- if use_design_mode -%}XX{%- endif -%}
    </span>
    {% comment %} <span class="countdown__text countdown__text--simple font-body-semi-bold countdown__hours__label uppercase">{{ 'general.countdown.hours' | t }}</span> {% endcomment %}
  </div>
  <div class="countdown__sep flex flex-column color-foreground">
    <span class="cuntdown__sep__colon_line">:</span>
  </div>
  <div class="countdown__part countdown__part--simple countdown__part--simple-{{id}} flex flex-column justify-center countdown__minutes center">
    <span class="countdown__part__value countdown__part__value--simple countdown__minutes__value flex justify-center align-center h2 font-heading-extra-bold">
      {%- if use_design_mode -%}XX{%- endif -%}
    </span>
    {% comment %} <span class="countdown__text countdown__text--simple font-body-semi-bold countdown__minutes__label uppercase">{{ 'general.countdown.minutes' | t }}</span> {% endcomment %}
  </div>
  <div class="countdown__sep flex flex-column color-foreground">
    <span class="cuntdown__sep__colon_line">:</span>
  </div>
  <div class="countdown__part countdown__part--simple countdown__part--simple-{{id}} flex flex-column justify-center countdown__seconds center">
    <span class="countdown__part__value countdown__part__value--simple countdown__seconds__value flex justify-center align-center h2 font-heading-extra-bold">
      {%- if use_design_mode -%}XX{%- endif -%}
    </span>
    {% comment %} <span class="countdown__text countdown__text--simple font-body-semi-bold countdown__seconds__label uppercase">{{ 'general.countdown.seconds' | t }}</span> {% endcomment %}
  </div>
</div>
